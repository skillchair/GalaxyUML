using Microsoft.AspNetCore.Mvc;
using Attribute = GalaxyUML.Core.Models.Attribute;
using IAttributeRepo = GalaxyUML.Data.Repositories.IAttributeRepo;

namespace GalaxyUML.Api.Controllers
{
    [ApiController]
    [Route("api/attributes")]
    class AttributeController : ControllerBase
    {
        private readonly IAttributeRepo _attributeRepo;

        public AttributeController(IAttributeRepo attributeRepo)
        {
            _attributeRepo = attributeRepo;
        }

        [HttpGet("{id:guid}")]
        public async Task<IActionResult> GetByIdAsync(Guid id)
        {
            var attribute = await _attributeRepo.GetByIdAsync(id);
            if (attribute == null) return NotFound();
            return Ok(attribute);
        }

        [HttpGet("classBox/{id:guid}")]
        public async Task<IActionResult> GetByClassBoxAsync(Guid idClassBox)
        {
            var attributes = await _attributeRepo.GetByClassBoxAsync(idClassBox);
            return Ok(attributes);
        }

        [HttpGet("all")]
        public async Task<IActionResult> GetAllAsync()
        {
            var attributes = await _attributeRepo.GetAllAsync();
            return Ok(attributes);
        }

        [HttpPost]
        public async Task<IActionResult> CreateAsync([FromBody] Attribute attribute)
        {
            try
            {
                await _attributeRepo.CreateAsync(attribute);
                return Ok(attribute);
            }
            catch (Exception ex)
            {
                return BadRequest(ex.Message);
            }
        }

        [HttpPut("{id:guid}")]
        public async Task<IActionResult> UpdateAsync(Guid id, [FromBody] Attribute attribute)
        {
            try
            {
                await _attributeRepo.UpdateAsync(id, attribute);
                return NoContent();
            }
            catch (Exception ex)
            {
                return BadRequest(ex.Message);
            }
        }

        [HttpDelete("{id:guid}")]
        public async Task<IActionResult> DeleteAsync(Guid id)
        {
            try
            {
                await _attributeRepo.DeleteAsync(id);
                return NoContent();
            }
            catch (Exception ex)
            {
                return NotFound(ex.Message);
            }
        }
    }
}