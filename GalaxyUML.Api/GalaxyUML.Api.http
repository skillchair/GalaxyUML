@host = https://localhost:5000

### Users - register
POST {{host}}/api/users
Content-Type: application/json

{
  "firstName": "Ana",
  "lastName": "Test",
  "username": "ana1",
  "email": "ana@test.com",
  "password": "Passw0rd!"
}

### Teams - create
POST {{host}}/api/teams
Content-Type: application/json

{
  "teamName": "Dev Team",
  "ownerId": "PUT-OWNER-GUID-HERE"
}

### Teams - join
POST {{host}}/api/teams/PUT-TEAM-ID-HERE/join
Content-Type: application/json

{
  "userId": "PUT-USER-GUID-HERE",
  "joinCode": "ABC123"
}

### Teams - change role
POST {{host}}/api/teams/PUT-TEAM-ID-HERE/role
Content-Type: application/json

{
  "actorId": "PUT-OWNER-OR-ORG-GUID",
  "targetUserId": "PUT-USER-GUID",
  "role": "Organizer"
}

### Teams - ban
POST {{host}}/api/teams/PUT-TEAM-ID-HERE/ban
Content-Type: application/json

{
  "actorId": "PUT-OWNER-GUID",
  "targetUserId": "PUT-USER-GUID",
  "reason": "spam"
}

### Teams - leave
POST {{host}}/api/teams/PUT-TEAM-ID-HERE/leave
Content-Type: application/json

{
  "userId": "PUT-USER-GUID"
}

### Teams - delete
DELETE {{host}}/api/teams/PUT-TEAM-ID-HERE
Content-Type: application/json

{
  "userId": "PUT-OWNER-GUID"
}

